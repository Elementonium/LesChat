<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                                android:layout_marginBottom="12dp">

    <TextView
            android:text="You cant actually type messages and send in this early alpha version of leschat but the first completed beta version will be released on 20th of June"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_textview_sent"
            android:background="@drawable/rounded_edittext_login_register"
            android:maxWidth="240dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:includeFontPadding="true"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" tools:srcCompat="@tools:sample/avatars[11]"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="332dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>